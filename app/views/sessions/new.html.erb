<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="content">
<div>
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email %><br>
    <%= f.email_field :email, :class=>"form-controle" %><br>

    <%= f.label :password %><br>
    <%= f.password_field :password, :class=>"form-controle" %><br>

    <%= f.submit "Log in", :class=>"submit"%>
  <%end%>

  <p>New user? <%= link_to "Sing up now", signup_path%> </p>
</div>
</div>