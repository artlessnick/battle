<% provide(:title, "Add question") %>
<h1>Add question</h1>


<div>
  <%= form_for(:addquest, url: addquestions_path) do |f| %>

    <%= f.label :category %>
    <%= select_tag(:category, options_for_select(@categorys)) %>

    <%= f.label :question %>
    <%= f.text_field :question %>

    <%= f.label :trueanswer %>
    <%= f.text_field :trueanswer%>
    
    <%= f.label :answer2 %>
    <%= f.text_field :answer2%>

    <%= f.label :answer3 %>
    <%= f.text_field :answer3%>

    <%= f.label :answer4 %>
    <%= f.text_field :answer4 %>

    <%= f.button "Save question"%>
  <%end%>

</div>